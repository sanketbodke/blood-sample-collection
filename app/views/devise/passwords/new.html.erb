<%= stylesheet_link_tag "user_profile", "data-turbo-track": "reload" %>

<div class="container user-form">
  <div class="user-form-container" style="height: 100vh">
    <%= form_for(resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: { method: :post, class: "user-details-form" }) do |f| %>

      <h3 class="section-heading lab-patient-form-heading">
        Reset Your Password
      </h3>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field user-profile-field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Reset password", class: "primary-btn" %>
      </div>

      <%#= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

