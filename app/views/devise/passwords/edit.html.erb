<%= stylesheet_link_tag "user_profile", "data-turbo-track": "reload" %>

<div class="container user-form" style="min-height: 100vh">
  <div class="user-form-container">
    <%= form_for(resource,
                 as: resource_name,
                 url: password_path(resource_name),
                 html: { method: :put, class: "user-details-form" }) do |f| %>

      <h3 class="section-heading lab-patient-form-heading" style="margin-top: 20px">
        Change Your Password
      </h3>

      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field user-profile-field">
        <%= f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field user-profile-field">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change password", class: "primary-btn"%>
      </div>

      <%#= render "devise/shared/links" %>
    <% end %>
  </div>
</div>


