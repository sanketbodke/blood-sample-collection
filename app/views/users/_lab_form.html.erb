<h3><%= @user.lab ? 'Update Lab Details' : 'Create Lab' %></h3>

<%= form_with model: (@user.lab || Lab.new), url: @user.lab ? lab_path(@user.lab) : labs_path, method: @user.lab ? :put : :post do |f| %>
  <div>
    <%= f.label :name, "Lab Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email, "Lab Email" %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :phone, "Lab Phone" %>
    <%= f.telephone_field :phone %>
  </div>

  <div>
    <%= f.submit @user.lab ? "Update Lab Details" : "Create Lab" %>
  </div>
<% end %>